// client/src/pages/ArchivePage.tsx
import React, { useEffect, useState } from 'react';
import { getArchiveSeasons, getArchivePeriods, getArchivePeriodStats } from '../api';
import { useTheme } from '../contexts/ThemeContext';
import { OGBA_TEAM_NAMES } from '../lib/ogbaTeams';
import { useAuth } from '../contexts/AuthContext';
import EditPlayerNameModal from '../components/EditPlayerNameModal';

export default function ArchivePage() {
  const { theme } = useTheme();
  const { me } = useAuth();
  
  const [seasons, setSeasons] = useState<any[]>([]);
  const [selectedYear, setSelectedYear] = useState<number | null>(null);
  const [periods, setPeriods] = useState<any[]>([]);
  const [selectedPeriod, setSelectedPeriod] = useState<number | null>(null);
  const [stats, setStats] = useState<any[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [editingStat, setEditingStat] = useState<any | null>(null);

  const isCommissioner = me?.user?.isCommissioner || false;

  // Load available seasons
  useEffect(() => {
    async function loadSeasons() {
      try {
        setLoading(true);
        const data = await getArchiveSeasons();
        setSeasons(data.seasons || []);
        
        if (data.seasons && data.seasons.length > 0) {
          setSelectedYear(data.seasons[0].year);
        }
      } catch (err: any) {
        setError(err?.message || 'Failed to load archive');
      } finally {
        setLoading(false);
      }
    }
    loadSeasons();
  }, []);

  // Load periods when year changes
  useEffect(() => {
    if (!selectedYear) return;
    
    async function loadPeriods() {
      try {
        setLoading(true);
        setError(null);
        const data = await getArchivePeriods(selectedYear);
        setPeriods(data.periods || []);
        
        if (data.periods && data.periods.length > 0) {
          setSelectedPeriod(data.periods[0].periodNumber);
        }
      } catch (err: any) {
        setError(err?.message || 'Failed to load periods');
        setPeriods([]);
      } finally {
        setLoading(false);
      }
    }
    loadPeriods();
  }, [selectedYear]);

  // Load stats when period changes
  useEffect(() => {
    if (!selectedYear || !selectedPeriod) return;
    
    async function loadStats() {
      try {
        setLoading(true);
        setError(null);
        const data = await getArchivePeriodStats(selectedYear, selectedPeriod);
        setStats(data.stats || []);
      } catch (err: any) {
        setError(err?.message || 'Failed to load stats');
        setStats([]);
      } finally {
        setLoading(false);
      }
    }
    loadStats();
  }, [selectedYear, selectedPeriod]);

  // Group stats by team
  const teamGroups = stats.reduce((acc: any, stat: any) => {
    if (!acc[stat.teamCode]) {
      acc[stat.teamCode] = [];
    }
    acc[stat.teamCode].push(stat);
    return acc;
  }, {});

  const teamCodes = Object.keys(teamGroups).sort();

  const handleSavePlayer = (updatedStat: any) => {
    // Update stats array with the new data
    setStats(prevStats =>
      prevStats.map(s => s.id === updatedStat.id ? updatedStat : s)
    );
  };

  return (
    <div className={`flex-1 min-h-screen ${theme === 'dark' ? 'bg-slate-950 text-slate-50' : 'bg-gray-50 text-gray-900'}`}>
      <main className="max-w-7xl mx-auto px-6 py-10">
        <header className="mb-8">
          <h1 className="text-3xl font-semibold tracking-tight mb-2">Historical Archive</h1>
          <p className={`text-sm ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>
            Browse past season player statistics by period
          </p>
        </header>

        {error && (
          <div className={`mb-6 rounded-lg border px-4 py-3 ${
            theme === 'dark' 
              ? 'border-red-500/40 bg-red-500/10 text-red-200' 
              : 'border-red-300 bg-red-50 text-red-900'
          }`}>
            {error}
          </div>
        )}

        {/* Selectors */}
        <div className="mb-6 flex gap-4 flex-wrap">
          <div>
            <label className={`block text-sm font-medium mb-2 ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>
              Year
            </label>
            <select
              value={selectedYear || ''}
              onChange={(e) => setSelectedYear(Number(e.target.value))}
              className={`rounded-lg border px-4 py-2 ${
                theme === 'dark'
                  ? 'border-slate-700 bg-slate-900 text-white'
                  : 'border-gray-300 bg-white text-gray-900'
              }`}
            >
              <option value="">Select year...</option>
              {seasons.map((s) => (
                <option key={s.id} value={s.year}>
                  {s.year} ({s._count.periods} periods)
                </option>
              ))}
            </select>
          </div>

          <div>
            <label className={`block text-sm font-medium mb-2 ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>
              Period
            </label>
            <select
              value={selectedPeriod || ''}
              onChange={(e) => setSelectedPeriod(Number(e.target.value))}
              disabled={!selectedYear}
              className={`rounded-lg border px-4 py-2 ${
                theme === 'dark'
                  ? 'border-slate-700 bg-slate-900 text-white disabled:opacity-50'
                  : 'border-gray-300 bg-white text-gray-900 disabled:opacity-50'
              }`}
            >
              <option value="">Select period...</option>
              {periods.map((p) => (
                <option key={p.id} value={p.periodNumber}>
                  Period {p.periodNumber} ({p._count.stats} players)
                </option>
              ))}
            </select>
          </div>
        </div>

        {loading && (
          <div className={`text-center py-12 ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>
            Loading...
          </div>
        )}

        {!loading && selectedYear && selectedPeriod && stats.length === 0 && (
          <div className={`text-center py-12 ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>
            No player stats found for {selectedYear} Period {selectedPeriod}
          </div>
        )}

        {!loading && stats.length > 0 && (
          <div className="space-y-6">
            <div className={`px-4 py-3 rounded-lg ${theme === 'dark' ? 'bg-blue-900/20 text-blue-200' : 'bg-blue-50 text-blue-900'}`}>
              <strong>{stats.length}</strong> players across <strong>{teamCodes.length}</strong> teams in {selectedYear} Period {selectedPeriod}
            </div>

            {teamCodes.map((teamCode) => (
              <div key={teamCode} className={`rounded-lg border overflow-hidden ${
                theme === 'dark' ? 'border-slate-800 bg-slate-900/50' : 'border-gray-200 bg-white'
              }`}>
                <div className={`px-6 py-4 border-b ${theme === 'dark' ? 'border-slate-800 bg-slate-900/70' : 'border-gray-200 bg-gray-50'}`}>
                  <h2 className="text-xl font-semibold">{OGBA_TEAM_NAMES[teamCode] || teamCode}</h2>
                </div>
                
                <div className="overflow-x-auto">
                  <table className="min-w-full text-sm">
                    <thead className={theme === 'dark' ? 'bg-slate-900/70' : 'bg-gray-100'}>
                      <tr>
                        <th className={`px-4 py-3 text-left font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>Player</th>
                        <th className={`px-4 py-3 text-center font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>Type</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>AB</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>H</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>R</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>HR</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>RBI</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>SB</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>AVG</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>W</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>SV</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>K</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>IP</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>ERA</th>
                        <th className={`px-4 py-3 text-right font-medium ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>WHIP</th>
                      </tr>
                    </thead>
                    <tbody className={`divide-y ${theme === 'dark' ? 'divide-slate-800' : 'divide-gray-200'}`}>
                      {teamGroups[teamCode].map((player: any) => (
                        <tr key={player.id} className={theme === 'dark' ? 'hover:bg-slate-800/50' : 'hover:bg-gray-50'}>
                          <td className={`px-4 py-3 ${theme === 'dark' ? 'text-slate-100' : 'text-gray-900'}`}>
                            <div className="flex items-center gap-2">
                              <div>
                                <div className="font-medium">{player.displayName || player.playerName}</div>
                                {!player.hasCanonicalName && player.mlbId && (
                                  <div className={`text-xs ${theme === 'dark' ? 'text-amber-400' : 'text-amber-600'}`}>
                                    MLB ID: {player.mlbId} (needs linking)
                                  </div>
                                )}
                              </div>
                              {isCommissioner && (
                                <button
                                  onClick={() => setEditingStat(player)}
                                  className={`ml-auto p-1 rounded hover:bg-blue-500/20 ${
                                    theme === 'dark' ? 'text-blue-400' : 'text-blue-600'
                                  }`}
                                  title="Edit player name"
                                >
                                  <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                  </svg>
                                </button>
                              )}
                            </div>
                          </td>
                          <td className={`px-4 py-3 text-center text-xs ${theme === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>{player.isPitcher ? 'P' : 'H'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.AB || '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.H || '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.R || '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.HR || '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.RBI || '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.SB || '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.AVG ? player.AVG.toFixed(3) : '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.W || '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.SV || '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.K || '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.IP || '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.ERA ? player.ERA.toFixed(2) : '—'}</td>
                          <td className={`px-4 py-3 text-right tabular-nums ${theme === 'dark' ? 'text-slate-300' : 'text-gray-700'}`}>{player.WHIP ? player.WHIP.toFixed(2) : '—'}</td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
              </div>
            ))}
          </div>
        )}

        {/* Edit Modal */}
        {editingStat && (
          <EditPlayerNameModal
            stat={editingStat}
            onClose={() => setEditingStat(null)}
            onSave={handleSavePlayer}
          />
        )}
      </main>
    </div>
  );
}
