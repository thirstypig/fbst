{
  "name": "fbst",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "// NOTE_1": "Front-end (React/Vite) lives in ./client",
    "// NOTE_2": "API server (Express/TS) lives in ./server",
    "// NOTE_3": "These scripts are just delegators so you always run them from repo root",
    "dev": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build && cd ../server && npm install && npx prisma generate --schema ../prisma/schema.prisma",
    "server": "cd server && npm start",
    "start": "cd server && npm start",
    "preview": "cd client && npm run preview",
    "lint": "cd client && npm run lint",
    "prisma:migrate": "cd server && npx prisma migrate dev",
    "prisma:generate": "cd server && npx prisma generate --schema ../prisma/schema.prisma",
    "test": "cd server && npm test && cd ../client && npm test",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.3",
    "vite": "^5.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prisma": "^6.19.2"
  }
}
